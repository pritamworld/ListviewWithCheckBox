<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                tools:context="com.pritesh.listviewwithcheckbox.MainActivity">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEnableAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/txtDisableAll"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="10dp"
            android:text="Enable All"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDisableAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="10dp"
            android:text="Disable All"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lstPushNotificationAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTop"/>

    <TextView
        android:id="@+id/tvDefaultTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Timing"
        android:layout_below="@id/lstPushNotificationAccount"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rbgTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDefaultTiming"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:text="Some Indian States"
        android:textSize="10sp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12 Hrs."
            android:textSize="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10 Hrs."
            android:textSize="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8 Hrs."
            android:textSize="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6 Hrs."
            android:textSize="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4 Hrs."
            android:textSize="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2 Hrs."
            android:textSize="10sp"/>
    </RadioGroup>

</RelativeLayout>
